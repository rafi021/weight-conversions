{
    "name": "rafi021/weight-conversions",
    "description": "This is my package weight-conversions",
    "keywords": [
        "rafi021",
        "weight-conversions"
    ],
    "homepage": "https://github.com/rafi021/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "mahmud ibrahim",
            "email": "ibrahim@shuttlebd.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Rafi021\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rafi021\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
